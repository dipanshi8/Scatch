<%- include('./partials/header') %>

<% if(success && success.length>0){ %>
    <div class="fixed top-5 left-1/2 transform -translate-x-1/2 z-50 p-4 rounded-md bg-green-500 shadow-lg">
        <span class="text-white font-medium">
            <%= success[0] %>
        </span>
    </div>
<% } %>

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold">Shop - Bags Collection</h1>
            <% if (typeof user !== 'undefined' && user !== null) { %>
                <a href="/cart" class="flex items-center gap-2 bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-600 transition">
                    <i class="ri-shopping-cart-line"></i> View Cart
                </a>
            <% } %>
        </div>
        
        <div class="mb-6 flex flex-wrap gap-4">
            <a href="/shop" class="px-4 py-2 bg-white rounded-lg shadow hover:bg-gray-50 transition">All Products</a>
            <a href="/shop?filter=discounted" class="px-4 py-2 bg-white rounded-lg shadow hover:bg-gray-50 transition">Discounted</a>
            <a href="/shop?filter=in-stock" class="px-4 py-2 bg-white rounded-lg shadow hover:bg-gray-50 transition">In Stock</a>
        </div>
        
        <% if (products && products.length > 0) { %>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                <% products.forEach(function(product){ %>
                    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
                        <a href="/product/<%= product._id %>">
                            <div class="w-full h-64 flex items-center justify-center" style="background-color: <%= product.bgcolor || '#ffffff' %>">
                                <% if (product.image && product.image.startsWith('data:')) { %>
                                    <img class="max-w-full max-h-full object-contain" src="<%= product.image %>" alt="<%= product.name %>">
                                <% } else { %>
                                    <img class="max-w-full max-h-full object-contain" src="/images/<%= product.image %>" alt="<%= product.name %>">
                                <% } %>
                            </div>
                        </a>
                        
                        <div class="p-4" style="background-color: <%= product.panelcolor || '#f3f4f6' %>; color: <%= product.textcolor || '#000000' %>">
                            <a href="/product/<%= product._id %>">
                                <h3 class="font-semibold text-lg mb-2 hover:text-blue-600 transition">
                                    <%= product.name %>
                                </h3>
                            </a>
                            <div class="flex justify-between items-center">
                                <div>
                                    <span class="text-xl font-bold text-green-600">₹<%= product.price - (product.discount || 0) %></span>
                                    <% if (product.discount > 0) { %>
                                        <span class="text-sm line-through text-gray-500 ml-2">₹<%= product.price %></span>
                                    <% } %>
                                </div>
                                <% if (typeof user !== 'undefined' && user !== null) { %>
                                    <a class="w-10 h-10 flex items-center justify-center rounded-full bg-white hover:bg-blue-100 transition shadow" href="/addtocart/<%= product._id %>" title="Add to Cart">
                                        <i class="ri-add-line text-lg"></i>
                                    </a>
                                <% } else { %>
                                    <a class="w-10 h-10 flex items-center justify-center rounded-full bg-white hover:bg-blue-100 transition shadow" href="/" title="Login to add to cart">
                                        <i class="ri-add-line text-lg"></i>
                                    </a>
                                <% } %>
                            </div>
                            <% if (product.stock !== undefined && product.stock <= 0) { %>
                                <p class="text-sm text-red-600 mt-2">Out of Stock</p>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="bg-white rounded-lg shadow p-12 text-center">
                <h2 class="text-2xl font-semibold mb-4">No products available</h2>
                <p class="text-gray-600 mb-6">We're working on adding new products. Please check back soon!</p>
                <a href="/" class="inline-block bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-600 transition">
                    Go to Home
                </a>
            </div>
        <% } %>
    </div>
    <%- include('./partials/footer') %>
<%- include('./partials/header') %>

<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Shopping Cart</h1>
    
    <% if (cartItems && cartItems.length > 0) { %>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Cart Items -->
            <div class="lg:col-span-2 space-y-4">
                <% cartItems.forEach(function(item) { %>
                    <div class="card bg-base-100 shadow-lg">
                        <div class="card-body">
                            <div class="flex flex-col md:flex-row gap-4">
                                <!-- Product Image -->
                                <div class="w-full md:w-32 h-32 flex-shrink-0">
                                    <% 
                                    // Get image URL - prioritize images array, fallback to image field
                                    let imageUrl = '';
                                    if (item.product.images && item.product.images.length > 0) {
                                        const primaryImage = item.product.images.find(img => img.isPrimary) || item.product.images[0];
                                        imageUrl = primaryImage ? primaryImage.url : '';
                                    }
                                    if (!imageUrl && item.product.image) {
                                        imageUrl = item.product.image;
                                    }
                                    // Ensure image path starts with / if it's a local path
                                    if (imageUrl && !imageUrl.startsWith('http') && !imageUrl.startsWith('/') && !imageUrl.startsWith('data:')) {
                                        imageUrl = '/' + imageUrl;
                                    }
                                    %>
                                    <img src="<%= imageUrl %>" alt="<%= item.product.name %>" 
                                        class="w-full h-full object-cover rounded-lg"
                                        onerror="this.src='/images/bag-hanging-from-furniture-item-indoors.jpg'" />
                                </div>
                                
                                <!-- Product Details -->
                                <div class="flex-1">
                                    <h3 class="text-xl font-semibold mb-2">
                                        <a href="/product/<%= item.product._id %>" class="hover:text-primary">
                                            <%= item.product.name %>
                                        </a>
                                    </h3>
                                    <p class="text-sm text-base-content/70 mb-3">
                                        <%= item.product.category %>
                                    </p>
                                    
                                    <div class="flex items-center gap-4 mb-4">
                                        <div class="flex items-center gap-2">
                                            <button onclick="updateQuantity('<%= item.product._id %>', 'decrease')" 
                                                class="btn btn-sm btn-circle">
                                                <i class="ri-subtract-line"></i>
                                            </button>
                                            <span id="qty-<%= item.product._id %>" class="px-4 font-semibold">
                                                <%= item.quantity %>
                                            </span>
                                            <button onclick="updateQuantity('<%= item.product._id %>', 'increase')" 
                                                class="btn btn-sm btn-circle">
                                                <i class="ri-add-line"></i>
                                            </button>
                                        </div>
                                        
                                        <a href="/cart/remove/<%= item.product._id %>" 
                                            class="btn btn-sm btn-error btn-ghost">
                                            <i class="ri-delete-bin-line"></i> Remove
                                        </a>
                                    </div>
                                    
                                    <div class="flex justify-between items-center">
                                        <div>
                                            <span class="text-lg font-bold text-primary">
                                                ₹<%= item.product.discountPrice > 0 ? item.product.discountPrice : item.product.price %> each
                                            </span>
                                        </div>
                                        <div class="text-right">
                                            <p class="text-sm text-base-content/60">Item Total</p>
                                            <p class="text-xl font-bold">₹<%= item.itemTotal %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            
            <!-- Order Summary -->
            <div class="lg:col-span-1">
                <div class="card bg-base-100 shadow-lg sticky top-24">
                    <div class="card-body">
                        <h2 class="card-title text-2xl mb-4">Order Summary</h2>
                        
                        <div class="space-y-3 mb-6">
                            <div class="flex justify-between">
                                <span>Subtotal</span>
                                <span class="font-semibold">₹<%= totalAmount %></span>
                            </div>
                            <div class="flex justify-between">
                                <span>Platform Fee</span>
                                <span class="font-semibold">₹<%= platformFee %></span>
                            </div>
                            <div class="flex justify-between">
                                <span>Shipping</span>
                                <span class="text-success font-semibold">FREE</span>
                            </div>
                            <div class="divider"></div>
                            <div class="flex justify-between text-xl font-bold">
                                <span>Total</span>
                                <span class="text-primary">₹<%= finalTotal %></span>
                            </div>
                        </div>
                        
                        <a href="/checkout" class="btn btn-primary btn-block btn-lg">
                            <i class="ri-shopping-bag-3-line"></i> Proceed to Checkout
                        </a>
                        
                        <a href="/shop" class="btn btn-outline btn-block">
                            <i class="ri-arrow-left-line"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="text-center py-16">
            <i class="ri-shopping-cart-line text-6xl text-base-content/30 mb-4"></i>
            <h2 class="text-2xl font-bold mb-4">Your cart is empty</h2>
            <p class="text-base-content/70 mb-6">Start shopping to add items to your cart!</p>
            <a href="/shop" class="btn btn-primary btn-lg">
                <i class="ri-store-2-line"></i> Go to Shop
            </a>
        </div>
    <% } %>
</div>

<script>
async function updateQuantity(productId, action) {
    try {
        const response = await fetch('/cart/update', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ productId, action })
        });
        
        const data = await response.json();
        if (data.success) {
            location.reload();
        } else {
            alert(data.message || 'Failed to update cart');
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Failed to update cart');
    }
}
</script>

<%- include('./partials/footer') %>


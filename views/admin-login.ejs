<%- include('./partials/header') %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
    <div class="max-w-md w-full bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold text-center mb-8">Admin Login</h1>
        
        <% if (error && error.length > 0) { %>
            <div class="mb-4 p-3 rounded-md bg-red-100 border border-red-400 text-red-700">
                <%= error[0] %>
            </div>
        <% } %>
        
        <% if (success && success.length > 0) { %>
            <div class="mb-4 p-3 rounded-md bg-green-100 border border-green-400 text-green-700">
                <%= success[0] %>
            </div>
        <% } %>
        
        <form action="/owners/login" method="POST">
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                <input type="email" name="email" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                <input type="password" name="password" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            
            <button type="submit" class="w-full bg-blue-500 text-white py-3 px-6 rounded-lg hover:bg-blue-600 transition font-semibold">
                Login
            </button>
        </form>
        
        <% if (process.env.NODE_ENV === "development") { %>
            <div class="mt-4 text-center">
                <a href="/owners/register" class="text-blue-600 hover:text-blue-800">Create Admin Account</a>
            </div>
        <% } %>
        
        <div class="mt-4 text-center">
            <a href="/" class="text-gray-600 hover:text-gray-800">‚Üê Back to Home</a>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>


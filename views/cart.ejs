<%- include('./partials/header') %>

<!-- Flash Messages -->
<% if(error && error.length>0){ %>
    <div class="toast toast-top toast-center z-50">
        <div class="alert alert-error">
            <span><%= error[0] %></span>
        </div>
    </div>
<% } %>

<% if(success && success.length>0){ %>
    <div class="toast toast-top toast-center z-50">
        <div class="alert alert-success">
            <span><%= success[0] %></span>
        </div>
    </div>
<% } %>

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <h1 class="text-4xl font-bold mb-8 text-gray-900">Shopping Bag</h1>
        
        <% if (cartItems && cartItems.length > 0) { %>
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Product List -->
                <div class="lg:col-span-2 space-y-6">
                    <% cartItems.forEach(function(item) { %>
                        <% if (item.product) { %>
                            <div class="bg-white rounded-lg shadow-md p-6 flex flex-col md:flex-row gap-6">
                                <!-- Product Image -->
                                <div class="w-full md:w-48 h-48 flex-shrink-0">
                                    <% 
                                    // Get image URL - prioritize images array, fallback to image field
                                    let imageUrl = '';
                                    if (item.product.images && item.product.images.length > 0) {
                                        const primaryImage = item.product.images.find(img => img.isPrimary) || item.product.images[0];
                                        imageUrl = primaryImage ? primaryImage.url : '';
                                    }
                                    if (!imageUrl && item.product.image) {
                                        imageUrl = item.product.image;
                                    }
                                    // Ensure image path starts with / if it's a local path
                                    if (imageUrl && !imageUrl.startsWith('http') && !imageUrl.startsWith('/') && !imageUrl.startsWith('data:')) {
                                        imageUrl = '/' + imageUrl;
                                    }
                                    %>
                                    <img src="<%= imageUrl %>" alt="<%= item.product.name %>" 
                                        class="w-full h-full object-cover rounded-lg"
                                        onerror="this.src='/images/bag-hanging-from-furniture-item-indoors.jpg'" />
                                </div>
                                
                                <!-- Product Details -->
                                <div class="flex-1 flex flex-col justify-between">
                                    <div>
                                        <h3 class="text-xl font-semibold text-gray-900 mb-2">
                                            <a href="/product/<%= item.product._id %>" class="hover:text-primary transition">
                                                <%= item.product.name %>
                                            </a>
                                        </h3>
                                        <p class="text-sm text-gray-600 mb-4">
                                            <%= item.product.category %>
                                        </p>
                                        
                                        <!-- Quantity Controls -->
                                        <div class="flex items-center gap-4 mb-4">
                                            <span class="text-sm font-medium text-gray-700">Quantity:</span>
                                            <div class="flex items-center gap-2">
                                                <form action="/cart/update" method="POST" class="inline">
                                                    <input type="hidden" name="productId" value="<%= item.product._id %>">
                                                    <input type="hidden" name="action" value="decrease">
                                                    <button type="submit" class="btn btn-sm btn-circle btn-outline">
                                                        <i class="ri-subtract-line"></i>
                                                    </button>
                                                </form>
                                                <span class="px-4 py-2 bg-gray-100 rounded-md font-semibold min-w-[3rem] text-center">
                                                    <%= item.quantity %>
                                                </span>
                                                <form action="/cart/update" method="POST" class="inline">
                                                    <input type="hidden" name="productId" value="<%= item.product._id %>">
                                                    <input type="hidden" name="action" value="increase">
                                                    <button type="submit" class="btn btn-sm btn-circle btn-outline">
                                                        <i class="ri-add-line"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="flex items-center justify-between">
                                        <div>
                                            <p class="text-2xl font-bold text-gray-900">
                                                ₹<%= ((item.product.discountPrice > 0 ? item.product.discountPrice : item.product.price) * item.quantity).toLocaleString() %>
                                            </p>
                                            <% if (item.product.discountPrice > 0) { %>
                                                <p class="text-sm text-gray-500 line-through">
                                                    ₹<%= (item.product.price * item.quantity).toLocaleString() %>
                                                </p>
                                            <% } %>
                                        </div>
                                        
                                        <!-- Remove Button -->
                                        <form action="/cart/remove/<%= item.product._id %>" method="POST" class="inline">
                                            <button type="submit" class="btn btn-sm btn-ghost text-red-600 hover:text-red-700 hover:bg-red-50">
                                                <i class="ri-delete-bin-line"></i> Remove
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    <% }); %>
                </div>
                
                <!-- Order Summary Card (Sticky Sidebar) -->
                <div class="lg:col-span-1">
                    <div class="bg-white rounded-lg shadow-lg p-6 sticky top-24">
                        <h2 class="text-2xl font-bold mb-6 text-gray-900">Order Summary</h2>
                        
                        <div class="space-y-4 mb-6">
                            <div class="flex justify-between text-gray-700">
                                <span>Subtotal</span>
                                <span class="font-semibold">₹<%= subtotal.toLocaleString() %></span>
                            </div>
                            
                            <div class="flex justify-between text-gray-700">
                                <span>Shipping</span>
                                <span class="font-semibold">
                                    <% if (shippingFee === 0) { %>
                                        <span class="text-green-600">Free</span>
                                    <% } else { %>
                                        ₹<%= shippingFee.toLocaleString() %>
                                    <% } %>
                                </span>
                            </div>
                            
                            <div class="border-t pt-4">
                                <div class="flex justify-between text-xl font-bold text-gray-900">
                                    <span>Total</span>
                                    <span>₹<%= totalAmount.toLocaleString() %></span>
                                </div>
                            </div>
                        </div>
                        
                        <a href="/checkout" class="btn btn-block bg-black text-white hover:bg-gray-800 transition font-semibold py-3 text-lg">
                            <i class="ri-shopping-bag-3-line"></i> Checkout
                        </a>
                        
                        <a href="/shop" class="btn btn-block btn-outline mt-3">
                            Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        <% } else { %>
            <!-- Empty State -->
            <div class="bg-white rounded-lg shadow-md p-16 text-center">
                <div class="max-w-md mx-auto">
                    <div class="mb-8">
                        <i class="ri-shopping-bag-3-line text-8xl text-gray-300"></i>
                    </div>
                    <h2 class="text-3xl font-bold text-gray-900 mb-4">Your bag is empty</h2>
                    <p class="text-gray-600 mb-8">Looks like you haven't added anything to your bag yet.</p>
                    <a href="/shop" class="btn btn-primary btn-lg">
                        <i class="ri-store-2-line"></i> Go Shopping
                    </a>
                </div>
            </div>
        <% } %>
    </div>
</div>

<script>
// Auto-hide flash messages after 5 seconds
setTimeout(() => {
    const toasts = document.querySelectorAll('.toast');
    toasts.forEach(toast => {
        toast.style.transition = 'opacity 0.5s';
        toast.style.opacity = '0';
        setTimeout(() => toast.remove(), 500);
    });
}, 5000);
</script>

<%- include('./partials/footer') %>
